{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jquery": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-classes-per-file": "off",
        "import/extensions": ["error", "ignorePackages"],
        "max-len": ["error", { "code": 175 }],
        "indent": ["error", 2],
        "no-use-before-define": "off",
        "no-console": "off",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "linebreak-style": "off",
        "object-shorthand": "off",
        "no-restricted-syntax": "off",
        "prefer-destructuring":"off"
    }
}
